{
  "name": "extension",
  "displayName": "AI Code Assistant",
  "description": "AI Powered Code Optimizer and debugger",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.104.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "extension.optimizeCode",
        "title": "Optimize Code",
        "category": "AI Assistant"
      },
      {
        "command": "extension.debugCode",
        "title": "Debug Code",
        "category": "AI Assistant"
      },
      {
        "command": "extension.runInSandbox",
        "title": "Run in Sandbox",
        "category": "AI Assistant"
      },
      {
        "command": "extension.agentSettings",
        "title": "Agent Settings",
        "category": "AI Assistant"
      },
      {
        "command": "extension.openWebView",
        "title": "Open AI Assistant Panel",
        "category": "AI Assistant"
      }
    ],
    "configuration": {
      "title": "AI Code Assistant",
      "properties": {
        "aiCodeAssistant.apiKey": {
          "type": "string",
          "default": "",
          "description": "API key for AI service",
          "order": 1
        },
        "aiCodeAssistant.agentType": {
          "type": "string",
          "enum": [
            "optimizer",
            "debugger",
            "analyzer",
            "full-stack"
          ],
          "default": "full-stack",
          "description": "Type of AI agent to use",
          "order": 2
        },
        "aiCodeAssistant.enableStatusBar": {
          "type": "boolean",
          "default": true,
          "description": "Show AI agent status in status bar",
          "order": 3
        },
        "aiCodeAssistant.autoOptimize": {
          "type": "boolean",
          "default": false,
          "description": "Automatically suggest optimizations",
          "order": 4
        }
      }
    }
  },
  "scripts": {
    "lint": "eslint .",
